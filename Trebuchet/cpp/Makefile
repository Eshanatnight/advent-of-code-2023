# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  part_one_config = debug
  part_two_config = debug

else ifeq ($(config),release)
  part_one_config = release
  part_two_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := part_one part_two

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

part_one:
ifneq (,$(part_one_config))
	@echo "==== Building part_one ($(part_one_config)) ===="
	@${MAKE} --no-print-directory -C . -f part_one.make config=$(part_one_config)
endif

part_two:
ifneq (,$(part_two_config))
	@echo "==== Building part_two ($(part_two_config)) ===="
	@${MAKE} --no-print-directory -C . -f part_two.make config=$(part_two_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f part_one.make clean
	@${MAKE} --no-print-directory -C . -f part_two.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   part_one"
	@echo "   part_two"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"